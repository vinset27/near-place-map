DATABASE_URL=postgresql://USER:PASSWORD@HOST/DB?sslmode=require
SESSION_SECRET=change-me-to-a-long-random-string

# Admin (for approving business applications)
ADMIN_TOKEN=change-me-admin-token

# Cloudflare R2 (S3-compatible)
# Bucket name (for you: oshow)
R2_BUCKET=oshow
# From Cloudflare dashboard: Account ID + Access Key (R2)
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# Optional: override endpoint (default uses https://<accountId>.r2.cloudflarestorage.com)
# R2_ENDPOINT=https://<accountId>.r2.cloudflarestorage.com

# Public base URL used to build public links returned to the client after upload.
# For your bucket endpoint example: https://<accountid>.r2.cloudflarestorage.com/oshow
R2_PUBLIC_BASE_URL=https://<accountid>.r2.cloudflarestorage.com/oshow

# Google Places (official API, for importing real establishments)
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Mapbox (client build-time env)
VITE_MAPBOX_TOKEN=pk.your-mapbox-token

# Client -> API base URL (for Cloudflare Pages / split-origin deployments)
# Example: https://near-place-map.onrender.com
VITE_API_BASE_URL=

# Mobile app -> API base URL (Expo)
# If set, mobile ignores VITE_API_BASE_URL and uses this value instead.
# Example: https://api.votre-domaine.com
EXPO_PUBLIC_API_BASE_URL=

# Optional (DEV only): enable ONE retry on a fallback base URL when the public API returns HTML (Cloudflare/503).
# Leave empty to disable any LAN fallback (recommended if you don't want to run a local backend).
# Example: http://192.168.1.85:5000
EXPO_PUBLIC_DEV_FALLBACK_BASE_URL=

# Backend CORS allowed origins (comma-separated) so Cloudflare Pages can call the API.
# You can also allow Preview deployments with a wildcard subdomain:
# Example:
#   CORS_ORIGINS=https://near-place-map.pages.dev,https://*.near-place-map.pages.dev,https://your-custom-domain.com
CORS_ORIGINS=

